@model TimeSheet.Models.TimesheetModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Bootstrap Core CSS -->

</head>
<body>
    @*<div class="cssload-speeding-wheel"></div>*@
    <!-- Preloader -->
    @*<div class="preloader">
            <img src="~/images/wheel.gif" height="100" />
        </div>*@

    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="white-box">
                <form class="form-horizontal form-material" id="timesheetform" onsubmit="return SaveTimesheetDetail();">
                    @Html.HiddenFor(m => m.TimeEntryDetail.Id)
                    <div class="form-body">
                        <div class="form-group ">
                            <label class="control-label col-md-3">Project*</label>
                            <div class="col-md-3">
                                @Html.DropDownListFor(m => m.TimeEntryDetail.ProjectName, new SelectList(Model.ProjectList, "Id", "Name"), new { @required = "0", id = "countryDropDown", @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group ">
                            <label class="control-label col-md-3">Date*</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.TimeEntryDetail.Date, new { @id = "dateinput", @required = "", @class = "form-control datepicker", @placeholder = "dd/mm/yyyy" })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Total Working Hours*</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.TimeEntryDetail.Hours, new { @id = "hours", @required = "", @type = "number", @class = "form-control", @placeholder = "Hours" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">Remarks*</label>
                            <div class="col-md-3">
                                @Html.TextAreaFor(m => m.TimeEntryDetail.Remarks, new { @id = "remark", @rows = "6", @cols = "250", @required = "", @class = "form-control", @placeholder = "Description" })
                            </div>
                        </div>

                        <label id="error" class="login-error"></label>
                        <div class="form-group text-center m-t-20">
                            <div class="col-md-1">
                                <button type="submit" id="saveButton" on" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">Save</button>
                            </div>
                            <div class="col-md-1">
                                <button type="reset" id="resetButton" on" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Bootstrap Core JavaScript -->
            <!-- Menu Plugin JavaScript -->
        </div>
    </div>
</body>

</html>
<!-- jQuery -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>

<script src="~/Scripts/project/timesheet.js"></script>
<script>
    var jq = $.noConflict();
    var dateToday = new Date();
    var yesterday = dateToday.setDate(dateToday.getDate() - 2);
    jq(document).ready(function () {
        // Date Picker
        jq('#dateinput').datepicker({
            autoclose: true,
            todayHighlight: true,
            dateFormat: "dd-mm-yy",
            minDate: dateToday
        });
    });
</script>