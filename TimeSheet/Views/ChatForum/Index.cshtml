@model TimeSheet.Models.ChatViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<body>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="white-box">
                <form class="form-horizontal form-material" id="chatForumform" onsubmit="return SaveChatForum();">
                    @Html.HiddenFor(m => m.IssueDetails.IssueId)
                    <div class="form-body">
                        <div class="form-group ">
                            <label class="control-label col-md-3">Issue*</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.IssueDetails.Issue, new { @rows = "6", @cols = "50", @id = "issueDetail", @required = "", @class = "form-control", @placeholder = "post here.." })
                            </div>
                        </div>

                        @*<div class="form-group ">
                            <label class="control-label col-md-3">Name*</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.IssueDetails.PostedBy, new { @id = "postedByName", @required = "", @class = "form-control datepicker", @placeholder = "Name" })
                            </div>
                        </div>*@
                        @*<div class="form-group">
                            <label class="control-label col-md-3">Email Id*</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => m.IssueDetails.EmailId, new { @id = "email", @required = "", @type = "email", @class = "form-control", @placeholder = "Email" })
                            </div>
                        </div>*@

                        <label id="error" class="login-error"></label>
                        <div class="form-group text-center m-t-20">
                            <div class="col-md-1">
                                <button type="submit" id="saveButton" on" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">POST</button>
                            </div>
                            <div class="col-md-1">
                                <button type="reset" id="resetButton" on" class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light">Reset</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <!-- Bootstrap Core JavaScript -->
            <!-- Menu Plugin JavaScript -->
        </div>
    </div>
</body>

</html>
<!-- jQuery -->
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>

